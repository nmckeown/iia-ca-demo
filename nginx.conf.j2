server {
  listen 80;

  root /var/www;
  index index.php index.html index.htm;

  server_name 10.0.3.4;
  
  location / {
   default_type "text/html";
   try_files $uri.html $uri $uri/ =404;
  }

  location ~ \.php$ {
    include snippets/fastcgi-php.conf;
    fastcgi_pass unix:/run/php/php8.1-fpm.sock;
  }
}
